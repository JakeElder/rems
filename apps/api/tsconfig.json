{
  "extends": "@rems/tsconfig",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/models": [
        "./src/models"
      ],
      "@/remi": [
        "./src/remi"
      ],
      "@/remi/utils": [
        "./src/remi/utils"
      ],
      "@/remi/fn": [
        "./src/remi/fn"
      ],
      "@/remi/wrappers": [
        "./src/remi/wrappers"
      ],
      "@/remi/refine": [
        "./src/remi/refine"
      ],
      "@/remi/types": [
        "./src/remi/types"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
