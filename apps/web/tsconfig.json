{
  "extends": "@rems/tsconfig",
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/fetch": [
        "fetch"
      ],
      "@/state": [
        "state"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/utils": [
        "utils"
      ]
    },
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
